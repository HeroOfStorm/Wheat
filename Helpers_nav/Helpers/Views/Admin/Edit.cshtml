@model Helpers.Models.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<style>
    .input-validation-error{
        background-color:lightcoral;
        border: 1px solid red;

    }
    .validation-summary-errors
    {
        color: red;
        font-size: 22px;
    }
    ul{
        list-style-type:none;
    }
</style>
<center>
    <h2>Редактирование</h2>


    @using (Html.BeginForm())
    {

        <div>
            @Html.ValidationSummary()
        </div>
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.Label("Имя", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Возраст", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } }) </p>
        </div>
        <div class="form-group">
            @Html.Label("Группа", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Group, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div>
            <input type="submit" class="btn btn-outline-success" value="Сохранить">
        </div>
    }

</center>

